doctype html
html(lang="en")

	//- Variables to set active page in sidebar
	block variables
		- var activePage = 'main-page';
		- var activeGroup = 'none';

	head
		meta(name="description", content="Sample App")

		meta(property="og:type", content="website")
		meta(property="og:site_name", content="Sample App")
		meta(property="og:title", content="Sample App")
		meta(property='og:image', content='/static/images/logo.jpeg')
		meta(property="og:description", content="Sample App")

		block title
			title Sample App

		include ../includes/_head.pug

	body.app.sidebar-mini

		// Navbar
		include ../includes/_header.pug

		// Sidebar menu
		include ../includes/_sidebar.pug

		//- Javascripts
		include ../includes/_javascript.pug

		main.app-content
			block content
		
		// Page specific javascripts
		block specific-js
